{
    "defaultSeverity": "error",
    "extends": [
        "tslint:recommended"
    ],
    "jsRules": {},
    "rules": {
        "quotemark": [
            true,
            "single"
        ],
        "max-line-length": [
            true,
            {
                "limit": 140,
                "ignore-pattern": "^import |^export {(.*?)}"
            }
        ],
        "trailing-comma": [true, {
            "multiline": "always",
            "singleline": "never"
        }],
        "object-literal-sort-keys": false
    },
    "rulesDirectory": []
}